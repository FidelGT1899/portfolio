---
import { getLocale } from '../utils/i18nHelpers';

const { locale, translations } = await getLocale(Astro);
const startYear = 2022;
const startMonth = 8;
const startDate = new Date(startYear, startMonth);
const now = new Date();

let yearsOfExperience = now.getFullYear() - startDate.getFullYear();
if (
  now.getMonth() < startDate.getMonth() ||
  (now.getMonth() === startDate.getMonth() && now.getDate() < startDate.getDate())
) {
  yearsOfExperience--;
}
---

<section id="home" class="antialiased">
    <div class="max-w-screen-xl px-4 py-16 mx-auto lg:px-6 sm:py-16 lg:py-24">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-4xl font-extrabold leading-tight tracking-tight text-white sm:text-4xl dark:text-white">
                {translations.banner.title}
            </h2>
            <p class="mt-4 mb-6 text-base font-normal text-gray-500 sm:text-xl dark:text-gray-400 md:text-lg lg:text-xl">
                {translations.banner.subtitle.replace('{{years}}', `+${yearsOfExperience}`)}
            </p>
            <a href="#projects" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg md:text-lg lg:text-xl bg-primary hover:bg-primary-dark focus:ring-4 focus:ring-primary-light dark:focus:ring-primary-dark">
                {translations.banner.projects}
                <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </a>
            <a target="_blank" href="https://www.linkedin.com/in/edwin-fidel-garc%C3%ADa-t%C3%A1vara/" class="inline-flex items-center justify-center px-5 py-3 text-base md:text-lg lg:text-xl font-medium text-center text-white border border-gray-300 rounded-lg hover:bg-gray-700 focus:ring-4 focus:ring-gray-800 dark:text-white dark:border-gray-700 dark:hover:bg-gray-700 dark:focus:ring-gray-800">
                {translations.banner.linkedin}
            </a> 
        </div>
    </div>
</section>
